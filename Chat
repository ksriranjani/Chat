 import google.generativeai as genai  # Ensure version is 0.8.5

# Configure the API key
genai.configure(api_key="YOUR_API_KEY")  # Replace with your real API key

# Load the correct model (supported in v0.8.5)
model = genai.GenerativeModel('models/text-bison-001')

# Function to get response from Gemini (text-bison)
def get_llm_response(question):
    try:
        prompt = f"Answer this user query briefly and clearly:\n{question}"
        response = model.generate_text(prompt=prompt)
        
        # Check if result exists
        if hasattr(response, 'result') and response.result:
            return response.result.strip()
        else:
            return "Sorry, no answer generated."
    except Exception as e:
        print("Gemini Error:", str(e))
        return "Sorry, I couldn't get an answer right now."

# Example usage
if __name__ == "__main__":
    user_input = "What is the capital of France?"
    print(get_llm_response(user_input))




